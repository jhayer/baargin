manifest {
  mainScript = 'main.nf'
}

// default parameters
params {
    cpus = "2"
    memory = "16g"
    help = false
    profile = false

    // Inputs
    illumina = './illumina'

    // Databases
    k2nt_db = ''
    card_db = ''
    mash_dataset = ''
    // tools
    krakentools_extract = ''
    //conda envs
    conda_card = ''
    conda_amrfinder = ''

    // Output
    output = './results'
}

profiles {
    //executer
    itrop {
        includeConfig 'conf/itrop.config'
    }

}
