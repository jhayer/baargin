manifest {
  mainScript = 'main.nf'
}

// default parameters
params {
    cpus = "2"
    memory = "16g"
    help = false
    profile = false

    // Inputs
    illumina = './illumina'

    // phred
    phred_type = '33'
    
    // Databases
    k2nt_db = ''
    card_db = ''
    mash_dataset = ''

    //species Options
    busco_lineage = null

    // tools
    krakentools_extract = ''

    //conda envs
    conda_amrfinder = ''
    conda_card_rgi = ''

    // Output
    output = './results'
    tmpdir = './tmpdir'
}

profiles {
    //executer
    itrop {
        includeConfig 'conf/itrop.config'
    }

}
