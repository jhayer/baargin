manifest {
  mainScript = 'main.nf'
}

// default parameters
params {
    cpus = "2"
    memory = "16g"
    help = false
    profile = false

    // Inputs
//    illumina = './illumina'
//    contigs = './contigs'

    // phred
    phred_type = '33'

    // Databases
    k2nt_db = ''
    card_db = ''
    plasmidfinder_db = ''
    platon_db = ''
    mash_dataset = ''

    //species Options
    busco_lineage = null

    // tools
    krakentools_extract = ''

    // Output
    output = './results'
    tmpdir = './tmpdir'
}

profiles {
    //executer
    itrop {
        includeConfig 'conf/itrop.config'
    }
    singu {
        includeConfig 'conf/singu.config'
    }

}
