docker {
    enabled = false
}
conda {
    enabled = true
}
singularity {
    enabled = true
}

process {
    executor = 'slurm'

    withName: fastp {
        cpus = '4'
        time = '4h'
        module = 'bioinfo/fastp/0.20.1'
    }
    withName: fastp_hybrid {
        cpus = '4'
        time = '4h'
        module = 'bioinfo/fastp/0.20.1'
    }

    withName: spades {
        cpus = '8'
        memory = '4g'
        time = '24h'
        module = 'bioinfo/SPAdes/3.14.1'
    }
    withName: unicycler {
        cpus = '8'
        memory = '4g'
        time = '24h'
        module = 'bioinfo/unicycler/0.4.4'
    }

    withName: kraken2nt_contigs {
        cpus = '4'
        time = '24h'
        module = 'bioinfo/kraken2/2.1.1'
    }
    withName: extract_kraken {
        cpus = '2'
        time = '4h'
        module = 'system/python/3.8.12'
    }

    withName: quast {
        cpus = '4'
        time = '24h'
        container = 'docker://quay.io/biocontainers/quast:5.0.2--py27pl5321h8f2a353_7'
    }
    withName: quast_contigs_only {
        cpus = '4'
        time = '24h'
        container = 'docker://quay.io/biocontainers/quast:5.0.2--py27pl5321h8f2a353_7'
    }
    withName: quast_hybrid {
        cpus = '4'
        time = '24h'
        container = 'docker://quay.io/biocontainers/quast:5.0.2--py27pl5321h8f2a353_7'
    }

    withName: busco {
        cpus = '2'
        time = '24h'
        container = 'docker://quay.io/biocontainers/busco:5.3.2--pyhdfd78af_0'
    }

    withName: busco_auto_prok {
        cpus = '2'
        time = '24h'
        container = 'docker://quay.io/biocontainers/busco:5.3.2--pyhdfd78af_0'
    }

    withName: mash {
      cpus = '2'
      time = '24h'
      module = 'bioinfo/mash/2.2'
    }

    withName: amrfinderplus {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/wslh-bioinformatics/spriggan-amrfinder:3.10.1'
    }

    withName: amrfinderplus_no_species {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/wslh-bioinformatics/spriggan-amrfinder:3.10.1'
    }

    withName: compile_amrfinder {
        cpus = '2'
        time = '4h'
        module = 'system/python/3.8.12'
    }

    withName: card_rgi {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/biocontainers/rgi:6.0.0--pyha8f3691_0'
    }

    withName: plasmidfinder {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/biocontainers/plasmidfinder:2.1.6--hdfd78af_0'
    }

    withName: platon {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/biocontainers/platon:1.6--pyhdfd78af_1'
    }

    withName: mlst {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/biocontainers/mlst:2.22.0--hdfd78af_0'
    }

    withName: bakta {
      cpus = '2'
      time = '24h'
  //    module = 'system/Miniconda3/1.0'
      container = 'docker://quay.io/biocontainers/bakta:1.4.0--pyhdfd78af_1'
    }

    withName: prokka {
      cpus = '2'
      time = '24h'
      container = 'docker://quay.io/biocontainers/prokka:1.14.6--pl5321hdfd78af_4'
    }

    withName: roary {
      cpus = '4'
      time = '24h'
      module = 'bioinfo/roary/3.12.0'
    //  container = 'docker://sangerpathogens/roary:trusty'
    }

}
